<apex:page standardController="Employee__c" >
<apex:form >
    <apex:pageBlock title="Employee Information">
        <apex:pageBlockSection title="Details" columns="1" >
            <apex:inputField value="{!Employee__c.First_Name__c}"/>
            <apex:inputField value="{!Employee__c.Last_Name__c}"/>
            <apex:inputField value="{!Employee__c.Address__c}"/>
            <apex:inputField value="{!Employee__c.Phone_Number__c}"/>
        </apex:pageBlockSection>
            <apex:pageBlockButtons >
                    <apex:commandButton value="Submit" action="{!save}"/>
                    <apex:commandButton value="cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>
    </apex:pageBlock>
</apex:form>

</apex:page>